{
  "extends": "./node_modules/@bentley/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "jsx": "react",
    "types": [
      "sinon-chai",
      "chai-as-promised",
      "mocha",
      "chai-jest-snapshot",
      "@bentley/react-scripts"
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}